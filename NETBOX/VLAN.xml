</xpath>
    <operation>{literal}{{/literal}
	"name": "{$params.object_id}"
	, "vid": "{$params.vid}"
	, "status": "{$params.status}"
	{if !empty($params.tenant)}
		{foreach $NetBox___Tenant item=tenant}
